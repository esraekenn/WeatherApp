<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/www"
        app:layoutDescription="@xml/motion_scene"
        tools:context=".ui.MainActivity">
    <LinearLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="200dp"
            android:padding="8dp"
            android:background="#6D4C79AF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="17.00"
                      android:padding="16dp"
                      android:layout_marginLeft="32dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content" android:fontFamily="@font/roboto_bold"
                      android:textSize="20sp" android:textStyle="bold"/>
            <TextView android:layout_width="wrap_content"
                      android:text="15째"
                      android:paddingRight="32dp"
                      android:layout_height="wrap_content" android:fontFamily="@font/roboto_bold"
                      android:textSize="20sp" android:textStyle="bold"/>
            <ImageView android:layout_width="50dp"

                       android:background="@drawable/sun"
                       android:layout_height="50dp"
                       android:layout_marginBottom="16dp"
                       android:layout_marginRight="36dp"
                       android:scrollbars="horizontal"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"

                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="18.00"
                      android:padding="16dp"
                      android:layout_marginLeft="32dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content" android:fontFamily="@font/roboto_bold"
                      android:textSize="20sp" android:textStyle="bold"/>
            <TextView android:layout_width="wrap_content"
                      android:text="14째"
                      android:paddingRight="32dp"
                      android:layout_height="wrap_content" android:fontFamily="@font/roboto_bold"
                      android:textSize="20sp" android:textStyle="bold"/>
            <ImageView android:layout_width="50dp"
                       android:layout_marginRight="36dp"
                       android:layout_marginBottom="16dp"
                       android:background="@drawable/sun"
                       android:layout_height="50dp"
                       android:scrollbars="horizontal"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"

                      android:layout_height="250dp">
            <TextView android:layout_width="wrap_content"
                      android:text="16.00"
                      android:padding="16dp"
                      android:layout_marginLeft="32dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content" android:fontFamily="@font/roboto_bold"
                      android:textSize="20sp" android:textStyle="bold"/>
            <TextView android:layout_width="wrap_content"
                      android:text="10째"
                      android:paddingRight="32dp"
                      android:layout_height="wrap_content" android:fontFamily="@font/roboto_bold"
                      android:textSize="20sp" android:textStyle="bold"/>
            <ImageView android:layout_width="50dp"
                       android:layout_marginRight="36dp"
                       android:layout_marginBottom="16dp"
                       android:background="@drawable/sun"
                       android:layout_height="50dp"
                       android:scrollbars="horizontal"/>

        </LinearLayout>
    </LinearLayout>
    <ImageView
            android:id="@+id/imgWeather"
            android:background="@drawable/rain"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:minHeight="150dp"
            android:minWidth="150dp"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.159"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.242"
            tools:srcCompat="@tools:sample/avatars[4]"/>

    <TextView
            android:id="@+id/txtCurrentWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="19째"
            android:textColor="#708CA0"
            android:textSize="65sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.579"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="92dp" android:layout_marginEnd="68dp"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Rainbow"
            android:textColor="#708CA0"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="@+id/txtCurrentWeather"
            android:layout_marginEnd="64dp"/>
    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle"
            android:layout_marginBottom="8dp"
            android:text="Button"
            android:clickable="false"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.motion.widget.MotionLayout>